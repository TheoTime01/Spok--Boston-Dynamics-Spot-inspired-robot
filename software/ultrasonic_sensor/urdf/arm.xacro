<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="medor">

<xacro:include filename="$(find ultrasonic_sensor)/urdf/arm.gazebo.xacro"/>


 <link name="first_arm">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0.75"/>
      <geometry>
        <cylinder radius="0.25" length ="1.5"/>
      </geometry>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0.75"/> 
      <geometry>
        <cylinder radius="0.25" length ="1.5"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="10"/>
      <inertia ixx="1e-3" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="1e-3"/>
    </inertial>
  </link>


  <link name="second_arm">
    <visual>
      <origin rpy="1.6 0 0" xyz="0 0.5 0"/>
      <geometry>
        <cylinder radius="0.25" length ="1.5"/>
      </geometry>
    </visual>
    <collision>
      <origin rpy="1.6 0 0" xyz="0 0 0"/> 
      <geometry>
        <cylinder radius="0.25" length ="1.5"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="10"/>
      <inertia ixx="1e-3" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="1e-3"/>
    </inertial>
  </link>

  <link name="third_arm">
    <visual>
      <origin rpy="0.8 0 0" xyz="0 0.5 -0.35"/>
      <geometry>
        <cylinder radius="0.25" length ="1"/>
      </geometry>
    </visual>
    <collision>
      <origin rpy="0.8 0 0" xyz="0 0 0"/> 
      <geometry>
        <cylinder radius="0.25" length ="1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="10"/>
      <inertia ixx="1e-3" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="1e-3"/>
    </inertial>
  </link>

  <joint name="arm_base_joint" type="revolute">
    <parent link="base_link"/>
    <child link="first_arm"/>
    <axis xyz="0 0 1"/>  <!-- axis of rotation -->
    <limit effort="1500.0" lower="-3.14" upper="3.14" velocity="0.5"/>
  </joint>


  <joint name="first_rot_link_joint" type="revolute">
    <parent link="first_arm"/>
    <child link="second_arm"/>
    <origin xyz="0 0 1.5" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>  <!-- axis of rotation -->
    <limit effort="1500.0" lower="-1" upper="1" velocity="0.5"/>
  </joint>

  <joint name="second_rot_link_joint" type="revolute">
    <parent link="second_arm"/>
    <child link="third_arm"/>
    <origin xyz="0 1 0" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>  <!-- axis of rotation -->
    <limit effort="1500.0" lower="-0.5" upper="0.5" velocity="0.5"/>
  </joint>

</robot>
